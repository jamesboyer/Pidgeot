<Window x:Class="Pidgeot.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pidgeot.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition />
      <ColumnDefinition />
    </Grid.ColumnDefinitions>
    <Border Grid.Column="0" BorderBrush="Black" BorderThickness="2" Width="100" Height="100">
      <Image x:Name="Pidgey" Source="/Pidgeot.App;component/Resources/pidgey-gen1-jp.jpg" />
    </Border>
    <Border Grid.Column="1" BorderBrush="Black" BorderThickness="2" Width="100" Height="100">
      <Image Source="/Pidgeot.App;component/Resources/pidgeotto-gen1-jp.jpg" />
    </Border>
    <Border Grid.Column="2" BorderBrush="Black" BorderThickness="2" Width="100" Height="100">
      <Image Source="/Pidgeot.App;component/Resources/pidgeot-gen1-jp.jpg" />
    </Border>
  </Grid>
</Window>
